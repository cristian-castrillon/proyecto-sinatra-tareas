<h1>Borrar Tareas</h1>


<table>
	<thead>
		<td>Id</td>
		<td>Tarea</td>
	</thead>
	<tbody>
		<% @lista_tareas.each do |tarea| %>
			<tr>
				<td><%= tarea["id"] %></td>
				<td><%= tarea["title"] %></td>
				<td>
					<% if tarea["done"] %>
						completed
					<% else %>
						incomplete
					<% end %>
				</td>
			</tr>	
		<% end %>
	</tbody>
</table>

<br>

<form action="/tareas/borrar" method="post">
	<label for="id">
		Id
		<input type="number" name="id">
	</label>
	<input type="submit" name="submit">
</form>