<% if @lista == 1 %>
	<h1>Tareas Sin Completar</h1>
<% else %>
	<h1>Tareas Completadas</h1>
<% end %>

<table>
	<thead>
		<td>Id</td>
		<td>Tarea</td>
	</thead>
	<tbody>
		<% @lista_tareas.each do |tarea| %>
			<tr>
				<td><%= tarea["id"] %></td>
				<td><%= tarea["title"] %></td>
			</tr>	
		<% end %>
	</tbody>
</table>

